@model ShopOnline.Models.ViewModel.InputViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/_Layout.cshtml";
}

<h2 class="text-info">@Model.Input.Name <br /> @Model.Input.DateInput</h2>



<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2 class="pull-left">
                    Danh sách nhập kho
                </h2>
                <a asp-action="Edit" asp-route-Id="@Model.Input.Id" class="btn btn-primary" style="width:100px;font-size:20px;margin-left:700px;">Edit</a>
                <a asp-action="Index" class="btn btn-success" style="width:150px;font-size:20px;margin-left:680px;margin-top:-62px;padding-top:6px;">Back to list</a>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.Raw("Tên sản phẩm")
                                </th>
                                <th>
                                    @Html.Raw("Nhà cung cấp")
                                </th>
                                <th>
                                    @Html.Raw("Số lượng")
                                </th>
                                <th>
                                    @Html.Raw("Giá nhập")
                                </th>
                                <th>
                                    @Html.Raw("Gía xuất")
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.inputInfos)
                            {
                                <tr class="table-info">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Product.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Supplier.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Count)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Inputprice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OutputPrice)
                                    </td>
                                </tr>
                                
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-info">
                                <th colspan="3" class="text-center">
                                    @Html.Raw("TỔNG TIỀN NHẬP")
                                </th>
                                <th colspan="2" class="text-center">
                                    500.000
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

