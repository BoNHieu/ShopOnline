<form method="post" asp-action="Index">
    <div class="row">
        <div class="col-lg-6 col-md-12" style="font-size:10px;">
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header row">
                            <div class="col-xs-5">
                                <h2 class="text-info">
                                    Danh sách nhập kho
                                </h2>
                            </div>
                            <div class="col-xs-5" style="padding:0px; height:20px;">
                                <div class="input-daterange input-group" id="bs_datepicker_range_container">
                                    <div class="form-line">
                                        <input type="text" name="DateStart" class="form-control" placeholder="Date start...">
                                    </div>
                                    <span class="input-group-addon">to</span>
                                    <div class="form-line">
                                        <input type="text" name="DateEnd" class="form-control" placeholder="Date end...">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-2">
                                <input type="submit" class="btn btn-success" value="Lọc" />
                            </div>
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.Raw("Người tạo")
                                            </th>
                                            <th>
                                                @Html.Raw("Tên sản phẩm")
                                            </th>
                                            <th>
                                                @Html.Raw("Số lượng")
                                            </th>
                                            <th>
                                                @Html.Raw("Giá nhập")
                                            </th>
                                            <th>
                                                @Html.Raw("Ngày tạo")
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr class="table-info">
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Input.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Product.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Count)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Inputprice)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Input.DateInput)
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr class="table-info">
                                            <th colspan="3" class="text-center">
                                                @Html.Raw("TỔNG TIỀN NHẬP")
                                            </th>
                                            <th colspan="2" class="text-center">
                                                @ViewBag.total
                                            </th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 col-md-12">
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                Danh sách đơn hàng
                            </h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);">Action</a></li>
                                        <li><a href="javascript:void(0);">Another action</a></li>
                                        <li><a href="javascript:void(0);">Something else here</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Age</th>
                                            <th>Start date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Tiger Nixon</td>
                                            <td>61</td>
                                            <td>2011/04/25</td>
                                        </tr>
                                        <tr>
                                            <td>Garrett Winters</td>
                                            <td>63</td>
                                            <td>2011/07/25</td>
                                        </tr>
                                        <tr>
                                            <td>Ashton Cox</td>
                                            <td>66</td>
                                            <td>2009/01/12</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>